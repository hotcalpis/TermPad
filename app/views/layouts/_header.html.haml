%nav.navbar.navbar-expand-md.navbar-dark.bg-primary.mb-2
  .container
    = link_to "TermPad", root_url, class: "navbar-brand"

    %ul.nav.navbar-right.navbar-nav
      %button.navbar-toggler{ type: "button", "data-toggle": "collapse", "data-target": "#navbars01", "aria-controls": "navbars01", "aria-expanded": "false", "aria-label": "Toggle navigation" }
        %span.navbar-toggler-icon
      #navbars01.collapse.navbar-collapse.text-center

        - if user_signed_in?
          %li.nav-item
            = link_to("新規投稿", new_post_url, class: "nav-link")
